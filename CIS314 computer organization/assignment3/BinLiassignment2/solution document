//Bin Li

//4. a. 0x000000FF

    0000 0000 0000 0000 0000 0000 1111 1111

    2^(8-1)

    1+2+4+8+16+32+64+128 = 255


//   b. 0xFFFFFF00 = 4294967295 - 255 =

    1111 1111 1111 1111 1111 1111 0000 0000

    2^(32) - 1 - 255

    = 4294967040

//   c. 0xFFFFFFFF =

    1111 1111 1111 1111 1111 1111 1111 1111

    2^(32) - 1

    = 4294967295

------------------------------------------------------------

//5. a. 0x00000000 =

0000 0000 0000 0000 0000 0000 0000 0000

= 0.0

//   b. 0x439D0000 =

    0 | 100 0011 1 | 001 1101 0000 0000 0000 0000
    S       E                      F

    S = Positive number

    128 + 7 = 135

    E = 135 - 127 = 8

    2^8 = 256

    F = .125 + 2^-4 + 2^-5 + 2^-7 = 1.2265625

    256 * 1.2265625 =


    314.0
//   c. 0xC0B00000 =
    1 | 100 0000 1 | 011 0000 0000 0000 0000 0000
    S        E                  D

    S = Negative number

    128 + 1 = 129

    E = 129 - 127 = 2

    2^2 = 4

    .25 + .125 = .375

    F = .375 + 1 = 1.375

    4 * 1.375

    = -5.5

------------------------------------------------------------

//6. a. (5) 1.0 =

    2^0 = 1

    S = 0
    E = 0
    F = 0
    0 | 011 1111 1 | 000 0000 0000 0000 0000
    3        F     8      0    0    0    0

    = 0x3F800000
//   b. (5) -2.5 =

    S = 1
    E = 1
    F = .125
    1 | 100 0000 0 | 010 0000 0000 0000 0000 0000
        C    0      2      0    0    0   0    0



    = 0xC020000
//   c. (5) 13.25 =

    S = 0
    E = 3
    F = .65625

    0 | 100 0001 0 | 101 0100 0000 0000 0000 0000
    4        1   9        4    0   0    0    0


    = 0x41540000
